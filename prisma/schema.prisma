generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id          String   @id @default(cuid())
  name        String
  species     String   // "cão", "gato", "outro"
  breed        String?
  age         Int?
  gender      String?  // "macho", "fêmea"
  status      String   @default("disponível") // "disponível", "adotado", "em tratamento"
  admissionDate DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  adoptions        Adoption[]
  veterinaryHistory VeterinaryHistory[]
}

model Adoption {
  id          String   @id @default(cuid())
  animalId    String
  adopterName String
  adopterEmail String?
  adopterPhone String?
  status      String   @default("em andamento") // "em andamento", "em acompanhamento", "finalizado"
  adoptionDate DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  animal      Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
}

model Donation {
  id          String   @id @default(cuid())
  amount      Float
  method      String   // "pix", "boleto", "cartão"
  donorName   String?
  donorEmail  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Volunteer {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  entryDate   DateTime @default(now())
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VeterinaryHistory {
  id          String   @id @default(cuid())
  animalId    String
  description String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  animal      Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
}
