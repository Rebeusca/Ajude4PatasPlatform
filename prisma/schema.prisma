generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id          String   @id @default(cuid())
  name        String
  species     String   // "cão", "gato", "outro"
  breed        String?
  age         Int?
  gender      String?  // "macho", "fêmea"
  status      String   @default("disponível") // "disponível", "adotado", "em tratamento"
  imageUrl    String?  // URL da foto do animal
  admissionDate DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  adoptions        Adoption[]
  veterinaryHistory VeterinaryHistory[]
}

model Adoption {
  id               String   @id @default(cuid())
  animalId         String
  adopterId        String
  adoptionDate     DateTime
  observations     String?
  status           String   @default("em adaptação") // "em adoção", "finalizado", etc
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  animal           Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
  adopter          Adopter  @relation(fields: [adopterId], references: [id], onDelete: Cascade)
}

model Adopter {
  id           String   @id @default(cuid())
  name         String
  address      String
  addressNum   String
  zipCode      String 
  neighborhood String  
  city         String
  state        String
  phone        String   
  email        String?
  observations String @default("Nenhuma observação adicionada.")   
  birthDate    DateTime
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  adoptions    Adoption[] // Added to establish the opposite relation
}


model Donation {
  id           String   @id @default(cuid())
  donorName    String
  product      String   
  quantity     String   
  donationDate DateTime @default(now())
  observations String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Volunteer {
  id               String   @id @default(cuid())
  name             String
  age              Int?
  imageUrl         String?  
  entryDate        DateTime @default(now())
  workArea         String   
  schedule         String   
  workedHours      Int      @default(0)
  absenteeism      Float    @default(0)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model VeterinaryHistory {
  id          String   @id @default(cuid())
  animalId    String
  doctor      String?  // Adicionado
  cost        String?  // Adicionado (como String para aceitar R$)
  illness     String?  // Adicionado
  description String   // Aqui salvaremos as "observações gerais"
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  animal      Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
}
