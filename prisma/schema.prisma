generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id          String   @id @default(cuid())
  name        String
  species     String   // "cão", "gato", "outro"
  breed        String?
  age         Int?
  gender      String?  // "macho", "fêmea"
  status      String   @default("disponível") // "disponível", "adotado", "em tratamento"
  admissionDate DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  adoptions        Adoption[]
  veterinaryHistory VeterinaryHistory[]
}

model Adoption {
  id               String   @id @default(cuid())
  animalId         String
  adopterName      String
  adopterAddress   String?
  adopterPhone     String?
  adopterEmail     String?
  adopterImageUrl  String?  // URL externa do adotante
  volunteerInCharge String? // Voluntário responsável
  adoptionDate     DateTime @default(now())
  status           String   @default("finalizado") // "em adoção", "finalizado", etc
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  animal           Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
}

model Donation {
  id           String   @id @default(cuid())
  donorName    String
  product      String   
  quantity     String   
  donationDate DateTime @default(now())
  observations String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Volunteer {
  id               String   @id @default(cuid())
  name             String
  age              Int?
  imageUrl         String?  
  entryDate        DateTime @default(now())
  workArea         String   
  schedule         String   
  workedHours      Int      @default(0)
  absenteeism      Float    @default(0)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model VeterinaryHistory {
  id          String   @id @default(cuid())
  animalId    String
  doctor      String?  // Adicionado
  cost        String?  // Adicionado (como String para aceitar R$)
  illness     String?  // Adicionado
  description String   // Aqui salvaremos as "observações gerais"
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  animal      Animal   @relation(fields: [animalId], references: [id], onDelete: Cascade)
}
